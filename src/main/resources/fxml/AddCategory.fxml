<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mylibrary.controllers.CategoryController">
    <HBox alignment="BASELINE_LEFT" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label prefWidth="150.0" text="%category.add" />
        <TextField fx:id="categoryTextField" prefWidth="200.0" />
        <Button fx:id="addCategoryBtn" mnemonicParsing="false" onAction="#addCategory" prefWidth="100.0" text="%add.button" />
    </HBox>
    <HBox alignment="BASELINE_LEFT" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label prefWidth="150.0" text="%choose.category" />
        <ComboBox fx:id="categoryComboBox" onAction="#onActionComboBox" prefWidth="200.0" />
        <Button fx:id="editCategoryBtn" mnemonicParsing="false" onAction="#editCategory" prefWidth="100.0" text="%edit.button" />
        <Button fx:id="deleteCategoryBtn" mnemonicParsing="false" onAction="#deleteCategory" prefWidth="100.0" text="%delete.button" />
    </HBox>
   <TreeView fx:id="categoryTreeView" prefWidth="200.0" showRoot="false" />
</VBox>

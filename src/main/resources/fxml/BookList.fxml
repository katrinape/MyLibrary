<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mylibrary.controllers.BookListController">
    <HBox alignment="BASELINE_LEFT" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label prefWidth="100.0" text="%book.category" alignment="BASELINE_RIGHT"/>
        <ComboBox prefWidth="200.0"/>
        <Label prefWidth="100.0" text="%book.author" alignment="BASELINE_RIGHT"/>
        <ComboBox prefWidth="200.0"/>
    </HBox>
    <TableView maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
        <columns>
            <TableColumn prefWidth="75.0" text="%book.title"/>
            <TableColumn prefWidth="75.0" text="%book.desc"/>
            <TableColumn prefWidth="75.0" text="%book.author"/>
            <TableColumn prefWidth="75.0" text="%book.category"/>
            <TableColumn prefWidth="75.0" text="%book.rating"/>
            <TableColumn prefWidth="75.0" text="%book.isbn"/>
            <TableColumn prefWidth="75.0" text="%book.release"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
